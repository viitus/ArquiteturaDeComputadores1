.data
numero1: .word 36       # Primeiro número
numero2: .word 48       # Segundo número
mdc:     .word 0        # Armazena o MDC aqui

.text
.globl main

main:
    lw $s0, numero1    # Carrega o primeiro número em $s0
    lw $s1, numero2    # Carrega o segundo número em $s1

    jal calcula_mdc   

    li $v0, 10          # Código de saída
    syscall

calcula_mdc:
    loop:
        beq $s0, $s1, fim  # Se os números forem iguais, termina
        bgt $s0, $s1, caso1  # Se $s0 > $s1
        bgt $s1, $s0, caso2  # Se $s1 > $s0
    caso1:
        sub $s0, $s0, $s1  # Subtrai $s1 de $s0
        j loop
    caso2:
        sub $s1, $s1, $s0  # Subtrai $s0 de $s1
        j loop
    fim:
        move $s2, $s0    # Move o resultado para $s2
        sw $s2, mdc      # Armazena o MDC na variável
        jr $ra           # Retorna
